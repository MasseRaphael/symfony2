{% extends 'base.html.twig' %}

{% block title %}Vidéos{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des vidéos Enregistrées</h1>
    <a href='video/add'>Ajouter une vidéo</a><br><br>
    {% for video in videos %}
        <h2>{{ video.title }}</h2>
        <p> Par {{ video.author }}, {{ video.totalview }} vue</p>
        <a href="{{ path('video_show', {"id": video.id}) }}">Voir plus</a>
    {% endfor %}
    
</div>
{% endblock %}
